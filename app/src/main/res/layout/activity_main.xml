<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/CategoriaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Nombre"
            android:layout_marginTop="20dp">

    </TextView>

    <EditText
            android:layout_alignBottom="@+id/CategoriaTitle"
            android:id="@+id/insertnombre"
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-56dp">
    </EditText>

    <TextView
            android:id="@+id/CategoriaDesciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Descripcion"
            android:layout_alignBottom="@+id/insertnombre"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="-22dp">


    </TextView>

    <EditText
            android:id="@+id/insertdescrip"
            android:layout_alignBottom="@+id/CategoriaDesciption"
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-47dp">
    </EditText>

    <Button
            android:id="@+id/btnAgregarCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AgregarCategoria"
            android:layout_below="@+id/insertdescrip"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:scrollbars="vertical"/>

    <Button
            android:id="@+id/btnListarCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listar CategorÃ­as"
            android:layout_below="@+id/recyclerView"
            android:layout_marginTop="102dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="127dp"/>

</RelativeLayout>
